extends ./common.pug
block content
    h1 Products
    .mb-3.row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-5.mt-2
                    .card.mb-3  
                        img.card-img-top(src="/images/fruit.jpg")
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.price
                        a.btn.btn-primary(href='#') Buy