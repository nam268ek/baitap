extends ../views/common.pug
block content
    .mb-3.row
        each item in flights
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-5.mt-2
                    .card.mb-3  
                        img.card-img-top(src="/images/flight.jpg")
                    .card-body
                        h5.card-title=item.flightname
                        p.card-text=item.depart
                        p.card-text=item.arrive
                        p.card-text=item.flightdate
                        p.card-text
                            small.text-muted Last updated